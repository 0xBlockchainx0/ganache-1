{
  "packages": ["src/packages/*", "src/chains/*/*"],
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": ["canary"],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock"],
      "reject-cycles": true
    }
  }
}
